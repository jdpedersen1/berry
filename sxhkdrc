# terminal emulator
alt + shift + Return
	kitty

# program launcher
alt + shift + d
	dmenu_run -p Launch: -fn Hermit:bold -l 5 -g 5 -nb '#222222' -sf '#181818' -sb '#007687' -nf '#b8b8b8'

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#
# berry hotkeys
#

alt + control + r 
    ./.config/berry/autostart

alt + control + shift + {Left, Down , Up, Right}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

alt + control + {Left, Down, Up, Right}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

alt + {0-9}
    berryc switch_workspace {0-9}

alt + shift + {0-9}
    berryc send_to_workspace {0-9}

alt + m
    berryc window_monocle

alt + f
    berryc fullscreen

alt +  p
    berryc snap_right

alt + o 
    berryc snap_left

alt + n
    berryc toggle_decorations

alt + Tab
    berryc cycle_focus

alt + shift + q
    berryc window_close

alt + c
    berryc window_center
    
alt + shift + c
    ./.local/scripts/dmenu/herbst-logout.sh

~button1
    berryc pointer_focus

alt + shift + w
    windows.sh

alt + shift + i
    vsp2
